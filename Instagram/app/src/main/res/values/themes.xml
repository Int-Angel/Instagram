<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Instagram" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/instagram_blue</item>
        <item name="colorPrimaryVariant">@color/instagram_blue2</item>
        <item name="colorOnPrimary">@color/instagram_white</item>

        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        -->

        <item name="android:background">@color/instagram_dark_background</item>
        <item name="android:statusBarColor">@color/instagram_dark_background</item>
        <item name="android:navigationBarColor">@color/instagram_dark_background</item>

        <item name="android:colorAccent">@color/instagram_white</item>
        <item name="android:textColor">@color/instagram_white</item>
        <item name="android:textColorHint">@color/instagram_white</item>
        <item name="android:editTextColor">@color/instagram_white</item>
        <item name="android:actionMenuTextColor">@color/instagram_white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash
        </item>
    </style>

    <style name="ButtonStlye123" parent="android:style/Widget.Button">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:background">@drawable/change_image_button</item>
    </style>

</resources>